<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        <title>{% block title %}Van{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('/bundles/vanassets/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('/bundles/vanassets/css/layout.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>

    <body>
    
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('vanwall_index') }}"><img src="{{ asset('/bundles/vanassets/images/logo-40x40.png') }}" alt="" /> Another Geek In The Wall</a>
                </div>
                <div class="navbar-collapse collapse">
                    <div class="pull-right navbar-right navbar-user-container">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            Welcome {{ app.user.username }} - <a href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
                        {% else %}
                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">Register</a>
                            <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary">Connexion</a>
                        {% endif %}
                    </div>
                </div><!--/.navbar-collapse -->
            </div>
        </div>
    
        <div class="container" style="padding:70px 0 0 0;">
            
            {% block content %}

            {% endblock %}
            
            <hr>
    
            <footer class="col-md-12">
                <p>AGITW &copy; 2014. Using Symfony 2.4, Doctrine 2, MongoDB, Twig, Bootstrap 3</p>
            </footer>
        </div>
    
        {% block javascripts %}
            <script src="{{ asset('/bundles/vanassets/js/jquery-1.11.1.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/vanassets/js/bootstrap.min.js') }}" type="text/javascript"></script>
            
            <script type="text/javascript">
            $( document ).ready(function() {

            });
            </script>
        {% endblock %}

    </body>
</html>